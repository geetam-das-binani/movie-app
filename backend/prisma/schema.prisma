

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  movies    Movie[]
}

model Movie {
  id         Int      @id @default(autoincrement())
  title      String
  type       String
  director   String
  budget     Float
  location   String
  duration   Int        // duration in minutes
  releaseYear Int
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  imageUrl  String?    

  // Relation
  user       User?      @relation(fields: [userId], references: [id])
  userId     Int?
}